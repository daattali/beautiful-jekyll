///////////////////////////////////////////////////////////////////////////////
// IMPLEMENTATION of inline methods.
///////////////////////////////////////////////////////////////////////////////

///////////////////////////////////////////////////////////////////////////////
// ----------------------- Standard services ------------------------------

//------------------------------------------------------------------------------
template <typename TDigitalSet>
inline
DGtal::deprecated::SetPredicate<TDigitalSet>::
SetPredicate( ConstAlias<DigitalSet> aSet )
  : mySet( aSet )
{
}
//------------------------------------------------------------------------------
template <typename TDigitalSet>
inline
DGtal::deprecated::SetPredicate<TDigitalSet>::
SetPredicate( const SetPredicate & other )
  : mySet( other.mySet )
{
}
//------------------------------------------------------------------------------
template <typename TDigitalSet>
inline
DGtal::deprecated::SetPredicate<TDigitalSet>&
DGtal::deprecated::SetPredicate<TDigitalSet>::
operator=( const SetPredicate & other )
{
  if (this != &other)
    {
      mySet = other.mySet;
    }
  return *this; 
}
//------------------------------------------------------------------------------
template <typename TDigitalSet>
inline
bool
DGtal::deprecated::SetPredicate<TDigitalSet>::
operator()( const Point & p ) const
{
  return mySet->find( p ) != mySet->end();
}
