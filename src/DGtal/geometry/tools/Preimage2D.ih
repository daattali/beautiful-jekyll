template <typename Shape>
inline
std::string
DGtal::Preimage2D<Shape>::className() const
{
  return "Preimage2D";
}

template <typename Shape>
inline
void
DGtal::Preimage2D<Shape>::selfDisplay ( std::ostream & out ) const
{
  out << "[Preimage2D]\n";
  out << "first part: \n";
  for (ConstForwardIterator i = myPHull.begin(); 
       i != myPHull.end(); ++i) {
    out << *i << ", ";
  }
  out << "\n";
  out << "second part: \n";
  for (ConstForwardIterator i = myQHull.begin(); 
       i != myQHull.end(); ++i) {
    out << *i << ", ";
  }
  out << "\n";
}

template <typename Shape>
inline
bool
DGtal::Preimage2D<Shape>::isValid() const
{
    return true;
}

template <typename Shape>
inline
typename DGtal::Preimage2D<Shape>::Point
DGtal::Preimage2D<Shape>::Uf() const
{
    return *myPHull.rbegin();
}

template <typename Shape>
inline
typename DGtal::Preimage2D<Shape>::Point
DGtal::Preimage2D<Shape>::Ul() const
{
    return *myPHull.begin();
}

template <typename Shape>
inline
typename DGtal::Preimage2D<Shape>::Point
DGtal::Preimage2D<Shape>::Lf() const
{
    return *myQHull.rbegin();
}

template <typename Shape>
inline
typename DGtal::Preimage2D<Shape>::Point
DGtal::Preimage2D<Shape>::Ll() const
{
    return *myQHull.begin();
}

template <typename Shape>
inline
void
DGtal::Preimage2D<Shape>::getSeparatingStraightLine(
  double& alpha, 
  double& beta, 
  double& gamma) const
{
  //critical points
  Point localUf = Uf();
  Point localUl = Ul();
  Point localLf = Lf();
  Point localLl = Ll();

  //parameters
  typedef typename Point::Coordinate Coordinate; 
  
  double a = -NumberTraits<Coordinate>::castToDouble(localLl[1]-localUf[1]);
  double b = NumberTraits<Coordinate>::castToDouble(localLl[0]-localUf[0]);
  double c = -NumberTraits<Coordinate>::castToDouble(localUf[0])*a 
                     -NumberTraits<Coordinate>::castToDouble(localUf[1])*b;
  
  double ap = -NumberTraits<Coordinate>::castToDouble(localUl[1]-localLf[1]);
  double bp = NumberTraits<Coordinate>::castToDouble(localUl[0]-localLf[0]);
  double cp = -NumberTraits<Coordinate>::castToDouble(localLf[0])*ap 
                      -NumberTraits<Coordinate>::castToDouble(localLf[1])*bp;

  double x, y; 
  double det = (ap*b-bp*a); 
  if (det != 0)
  {
    //intersection point
    x = -(b*cp-bp*c)/det;
    y = -(a*cp-ap*c)/(-det); 
    //normalisation of (ap,bp) with respect to (a,b)
    double l = std::sqrt(a*a + b*b); 
    double lp = std::sqrt(ap*ap + bp*bp); 
    double apn = ap/lp*l; 
    double bpn = bp/lp*l; 
    //slope bisector of (UfLl) and (UlLf)
    alpha = (a+apn)/2.0; 
    beta = (b+bpn)/2.0; 
    //intercept
    gamma = -alpha*x - beta*y;
  }
  else 
  {//parallel case
    alpha = a;
    beta = b;
    gamma = c;
  }
}


