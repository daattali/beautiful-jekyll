// ----------------------------------------------------------------------------
template <typename TP, typename TDC>
inline
void
DGtal::InHalfPlaneBy2x2DetComputer<TP,TDC>::init( const Point& aP, const Point& aQ )
{
  myA = static_cast<ArgumentInteger>( aP[0] ); 
  myB = static_cast<ArgumentInteger>( aP[1] ); 

  myDetComputer.init( static_cast<ArgumentInteger>( aQ[0] ) - myA,  
		      static_cast<ArgumentInteger>( aQ[1] ) - myB ); 
}

// ----------------------------------------------------------------------------
template <typename TP, typename TDC>
inline
void
DGtal::InHalfPlaneBy2x2DetComputer<TP,TDC>::init( const PointArray& aA )
{
  init( aA[0], aA[1] ); 
}

// ----------------------------------------------------------------------------
template <typename TP, typename TDC>
inline
typename DGtal::InHalfPlaneBy2x2DetComputer<TP,TDC>::Value
DGtal::InHalfPlaneBy2x2DetComputer<TP,TDC>::operator()( const Point& aR ) const
{
  return myDetComputer( static_cast<ArgumentInteger>( aR[0] ) - myA, 
			static_cast<ArgumentInteger>( aR[1] ) - myB ); 
}

// ----------------------------------------------------------------------------
template <typename TP, typename TDC>
inline
void
DGtal::InHalfPlaneBy2x2DetComputer<TP,TDC>::selfDisplay ( std::ostream & out ) const
{
  out << "[InHalfPlaneBy2x2DetComputer]";
}

// ----------------------------------------------------------------------------
template <typename TP, typename TDC>
inline
bool
DGtal::InHalfPlaneBy2x2DetComputer<TP,TDC>::isValid() const
{
  return true;
}



