template <typename TP, typename TDC>
inline
std::ostream&
DGtal::operator<< ( std::ostream & out, 
		    const InHalfPlaneBy2x2DetComputer<TP,TDC> & object )
{
  object.selfDisplay( out );
  return out;
}

