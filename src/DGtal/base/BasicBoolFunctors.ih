//////////////////////////////////////////////////////////////////////////////
#include <cstdlib>
//////////////////////////////////////////////////////////////////////////////

///////////////////////////////////////////////////////////////////////////////
// IMPLEMENTATION of inline methods.
///////////////////////////////////////////////////////////////////////////////

//------------------------------------------------------------------------------
inline
bool
DGtal::functors::TrueBoolFct0::operator()() const
{ return true; }
//------------------------------------------------------------------------------
inline
bool
DGtal::functors::FalseBoolFct0::operator()() const
{ return false; }
//------------------------------------------------------------------------------
inline
bool
DGtal::functors::IdentityBoolFct1::operator()( bool b ) const
{ return b; }
//------------------------------------------------------------------------------
inline
bool
DGtal::functors::NotBoolFct1::operator()(  bool b ) const
{ return !b; }
//------------------------------------------------------------------------------
inline
bool
DGtal::functors::AndBoolFct2::operator()( bool b1, bool b2 ) const
{ return b1 && b2; }
//------------------------------------------------------------------------------
inline
bool
DGtal::functors::OrBoolFct2::operator()( bool b1, bool b2 ) const
{ return b1 || b2; }
//------------------------------------------------------------------------------
inline
bool
DGtal::functors::XorBoolFct2::operator()( bool b1, bool b2 ) const
{ return b1 != b2; }
//------------------------------------------------------------------------------
inline
bool
DGtal::functors::ImpliesBoolFct2::operator()( bool b1, bool b2 ) const
{ return (! b1 ) || b2; }
//------------------------------------------------------------------------------

